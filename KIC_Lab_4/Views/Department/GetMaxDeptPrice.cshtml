@model DeptGoodModel
@{
    ViewBag.Title = "Max department price";
}

    <form class="mt-3" asp-action="GetMaxDeptPrice" asp-controller="Department" method="post">
        <input class="input-group col-4" asp-for="@Model.DeptName" placeholder="Please enter the department name" /><span class="text-danger" asp-validation-for="@Model.DeptName"></span>

        <hr />

        <input class="btn btn-outline-info" type="submit" value="Submit" />

        <div class="text-danger" asp-validation-summary="ModelOnly">
        </div>
    </form>

@if (!string.IsNullOrEmpty(Model?.GoodName))
{
    <div class="alert alert-info col-4 mt-2">Good name: @Model.GoodName</div>
}